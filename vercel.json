{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "src/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/src/(.*)", "dest": "/src/$1" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/node_modules/(.*)", "dest": "/node_modules/$1" }
  ]
} 